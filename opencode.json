{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "host": {
      "type": "local",
      "command": ["./target/release/host-mcp"],
      "enabled": true
    },
    "desktop": {
      "type": "local",
      "command": ["./target/release/desktop-mcp"],
      "enabled": true,
      "environment": {
        "DESKTOP_RESOLUTION": "1920x1080"
      }
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--isolated"],
      "enabled": true
    }
  }
}
